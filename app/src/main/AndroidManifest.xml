            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="thuanvo.efs.MainTab" />
        <activity android:name="thuanvo.efs.Dictionary" />
        <activity android:name="thuanvo.efs.ContentView" />

        <provider
            android:name="thuanvo.efs.DictionaryProvider"
            android:authorities="thuanvo.efs.DictionaryProvider"
            android:exported="false" />

        <activity android:name="thuanvo.efs.MyTextToSpeech" />

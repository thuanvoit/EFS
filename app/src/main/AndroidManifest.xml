        <activity android:name="thuanvo.efs.Voice.VoiceMain" />
        <activity android:name="thuanvo.efs.Grammar.GrammarMain" />
        <activity android:name="thuanvo.efs.Grammar.GrammarView" />
        <activity
            android:name="thuanvo.efs.OCR_READ.OcrCaptureActivity"
            android:label="Read Text" />
        <activity android:name="thuanvo.efs.OCR_READ.MainActivity" />
        <activity android:name="thuanvo.efs.Settings.SettingsActivity" />
        <activity android:name="thuanvo.efs.Settings.ReportEFS" />
        <activity android:name="thuanvo.efs.Games.GamesActivity"></activity>
